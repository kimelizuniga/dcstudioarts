<%- include('../partials/header') %>  

<div class="container topPad">
    <div class="content">
        <h1>New Quote</h1>
        <div class="container newGalContain">
            <form action="/quotes/<%= quote._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" class="form-control" type="text" value="<%= quote.image %>" placeholder="image url" name="quote[image]">
                </div>
                <div class="form-group">
                    <label for="quote">Quote</label>
                    <input id="quote" class="form-control" type="text" value="<%= quote.quote %>" placeholder="quote" name="quote[quote]">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" value="<%= quote.name %>" placeholder="name" name="quote[name]">
                </div>
                
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Submit">
                    <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">
                </div>
            </form>
        </div>
    </div>

<%- include('../partials/footer') %>  