<%- include('../partials/header') %>

<div class="topPad">
    <div class="content">
        <div class="d-inline-block mb-2">
            <a href="/dashboard" class="btn btn-info ml-3">Back</a>
            <a href="/new" class="btn btn-success ml-2">Add New Quote</a>
        </div>
        <h1 class="">Edit Quotes</h1>
        <div class="row">   
        <% quotes.forEach(function(quote){ %>
            <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                <div id="testiCard" class="card">
                    <div class="card-body">
                        <p>"<%= quote.quote %>" <strong> - </strong><%= quote.name %></p>  
                        <a href="/quotes/<%= quote._id %>/edit"><i class="fas fa-pencil-alt"></i></a> 
                        <a href="/quotes/<%= quote._id %>/delete"><i class="fas fa-trash-alt"></i></a>   
                    </div>
                </div>
            </div>
        <% }) %>
        </div>
    </div>

<%- include('../partials/footer') %>