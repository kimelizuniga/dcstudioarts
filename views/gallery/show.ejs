<%- include('../partials/header') %>

<div id="galleryShow">
    <a href="/gallery"><i class="fas fa-long-arrow-alt-left"></i></a>
    <h1><%= gallery.title %></h1>
    <img class="rounded" src="<%= gallery.image %>" alt="<%= gallery.description %>">
    <div class="mt-3">
        <h3>$<%= gallery.price %></h3>
        <p><%= gallery.description %></p>
        <% let date = gallery.created_at; %>
        <% let d = date.getDate(); %>
        <% let m = date.getMonth() + 1; %>
        <% let y = date.getFullYear() %>
    <p id="createdShow">Added on: <%= d + '/' + m + '/' + y %></p>
    </div>
    
    <footer>
        <span><i class="far fa-copyright"></i> Danene Copping 2020 - All Rights Reserved</span>
    </footer>
</div>


<%- include('../partials/footer') %>