<%- include('../partials/header') %>

    <h1 class="topPad">EDITING <%= gallery.title %></h1>
    <div class="container newGalContain">
        <form action="/gallery/<%=gallery._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" class="form-control" value="<%= gallery.title %>" type="text" placeholder="title" name="gallery[title]">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" class="form-control" value="<%= gallery.image %>" type="text" placeholder="image url" name="gallery[image]">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input id="price" class="form-control" value="<%= gallery.price %>" type="number" placeholder="price" name="gallery[price]" step='0.01'>
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <textarea id="description" class="form-control" value="<%= gallery.description %>" type="text" placeholder="description" name="gallery[description]"><%= gallery.description %></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Submit">
                <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">
            </div>
        </form>
    </div>

<%- include('../partials/footer') %>