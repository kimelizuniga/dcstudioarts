<%- include('partials/header') %>  

<div id="landing">
  <section id="landingContent">
    <h1>Danene Copping</h1>
    <% if(currentUser){ %>
      <div>
        <a href="/new" class="btn btn-success">Add New Quote</a>
        <a href="/quotes" class="btn btn-info">Edit Quote</a>
      </div>
    <% } %>
    
    <a href="#carouselContent"><i class="fas fa-chevron-down"></i></a>
    
<% if(quotes.length != 0){ %>
  <div id="carouselContent">
    <div id="galleryCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <a href="/gallery">
            <img class="d-block rounded" src="<%= quotes[0].image %>" alt="First slide">
          </a>
          <div class="quoteText rounded">
            <h4>"<%= quotes[0].quote %>"</h4>
            <p>- <%= quotes[0].name %></p>
          </div>
        </div>
        <% for(let i = 1; i < quotes.length; i++){ %>
          <div class="carousel-item">
            <a href="/gallery">
              <img class="d-block rounded" src="<%= quotes[i].image %>" alt="First slide">
            </a>
            <div class="quoteText rounded">
              <h4>"<%= quotes[i].quote %>"</h4>
              <p>- <%= quotes[i].name %></p>
            </div>
          </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#galleryCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#galleryCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% } %>
  <div id="socialMedia">
    <a class="mr-2" href="https://www.facebook.com/dc.studioartist.1" target="_blank"><i class="fab fa-facebook-square"></i></a>
    <a href="https://www.instagram.com/dcstudioartist/" target="_blank"><i class="fab fa-instagram-square"></i></a>
  </div>
  <footer id="landingFooter">
    <span><i class="far fa-copyright"></i> Danene Copping 2020 - All Rights Reserved</span>
  </footer>
  </div>
  
</section>

</div>




<%- include('partials/footer') %>
