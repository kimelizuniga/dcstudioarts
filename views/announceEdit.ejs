<%- include('./partials/header') %>  

<div class="container topPad">
    <div class="content">
        <h1>Edit Announcement</h1>
        <div class="container newGalContain">
            <form action="/announcement/<%= announcement._id %>?_method=PUT" method="POST" class="w-75 mx-auto">
                <div class="form-group">
                    <label for="about">Message</label>
                    <textarea id="message" class="form-control" type="text" placeholder="Message" name="announcement[message]" rows="10"><%= announcement.message %></textarea>
                </div>
                <div class="form-group">
                    <label class="d-block" for="image">Image URL</label>
                    <input id="image" type="text" placeholder="url" value="<%= announcement.image %>" name="announcement[image]">
                </div>
                
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Submit">
                    <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>  