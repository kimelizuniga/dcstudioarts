<%- include('../partials/header') %>

<div class="container topPad">
    <div class="content">
        <h1>Deleting testimony by <em>- <%= testimony.name %></em></h1>
        <div class="container newGalContain mt-5">
            <h3>Are you sure you want to delete this testimonial?</h3>
            <form class="delete-form mt-5" action="/testimonials/edit/<%= testimony._id%>?_method=DELETE" method="POST">
                <input class="btn btn-danger" type="submit" value="Delete">
                <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">
            </form>
            <p class="mt-5">" <%= testimony.quote %> "</p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>