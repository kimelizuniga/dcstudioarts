<%- include('../partials/header') %>

<div id="editAll" class="topPad">
    <div class="d-inline-block mb-2">
        <a href="/testimonials" class="btn btn-info ml-3">Back</a>
        <a href="/testimonials/new" class="btn btn-success ml-2">Add Testimonial</a>
    </div>
    <h1>Edit Testimonials</h1>
    <div class="row">
    <% testimonials.forEach(function(testimony){ %>
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
            <div id="testiCard" class="card">
                <div class="card-body">
                    <p>"<%= testimony.quote %>" <strong> - </strong><%= testimony.name %></p>  
                    <a href="/testimonials/edit/<%= testimony._id %>/edit"><i class="fas fa-pencil-alt"></i></a> 
                    <a href="/testimonials/edit/<%= testimony._id %>/delete"><i class="fas fa-trash-alt"></i></a>   
                </div>
            </div>
        </div>
    <% }) %>
    </div>
</div>

<%- include('../partials/header') %>