<%- include('../partials/header') %>  

<div class="container topPad">
    <div class="content">
        <h1>Edit About</h1>
        <div class="container newGalContain">
            <form action="/about/<%= about._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="about">About</label>
                    <textarea id="aboutForm" class="form-control" type="text" placeholder="about" name="about[about]" rows="10"><%= about.about %></textarea>
                </div>
                
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Submit">
                    <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">
                </div>
            </form>
        </div>
    </div>

<%- include('../partials/footer') %>  